<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zjut.material_wecenter">

    <uses-sdk xmlns:tools="http://schemas.android.com/tools"
        tools:overrideLibrary="android.support.v14.preference" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/nLiveoDrawer" />
        <activity
            android:name=".controller.activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".controller.activity.PostActivity"
            android:label="@string/title_activity_post" />
        <activity
            android:name=".controller.activity.UserActivity"
            android:label="@string/title_activity_user" />
        <activity
            android:name=".controller.activity.PostAnswerActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="PostAnswerActivity" />
        <activity
            android:name=".controller.activity.QuestionActivity"
            android:label="QuestionActivity" />
        <activity
            android:name=".controller.activity.LauchActivity"
            android:label="@string/app_name"
            android:theme="@style/LaunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activity.AnswerActivity"
            android:label="查看答案"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AnswerTheme"></activity>
        <activity
            android:name=".controller.activity.QuestionMenuActivity"
            android:theme="@style/BottomMenuTheme"
            >
        </activity>
    </application>

</manifest>
