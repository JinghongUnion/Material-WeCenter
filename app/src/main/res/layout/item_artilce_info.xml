<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_addTime_question"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/material_grey_300"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginBottom="2dp"
        android:padding="5dp">

        <ImageView
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_comment_grey_36dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_answerCount_question"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />

        <ImageView
            android:clickable="true"
            android:id="@+id/imageView_thumb_up"
            android:src="@drawable/ic_thumb_up_grey_36dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_thankCount_question"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />

        <ImageView
            android:clickable="true"
            android:id="@+id/imageView_thumb_down"
            android:src="@drawable/ic_thumb_down_grey_36dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="6dp"/>

    <View
        android:background="@color/material_grey_300"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


</LinearLayout>