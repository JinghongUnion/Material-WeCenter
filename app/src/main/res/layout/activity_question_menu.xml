<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.zjut.material_wecenter.controller.activity.QuestionMenuActivity"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fab_question_focus"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_follow_white"
                        app:fab_showShadow="false"
                        fab:fab_colorNormal="@color/nliveo_green_colorPrimary"
                        fab:fab_colorRipple="@color/nliveo_green_colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/textView_focus"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/material_grey_800"
                        android:text="关注"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fab_question_thanks"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_white_heart"
                        app:fab_showShadow="false"
                        fab:fab_colorNormal="@color/nliveo_red_colorPrimary"
                        fab:fab_colorRipple="@color/nliveo_red_colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/textView_thanks"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/material_grey_800"
                        android:text="感谢"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fab_question_answer"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_answer_white"
                        app:fab_showShadow="false"
                        fab:fab_colorNormal="@color/nliveo_blue_colorPrimary"
                        fab:fab_colorRipple="@color/nliveo_blue_colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/textView_answer"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/material_grey_800"
                        android:text="回答"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fab_question_close"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_close_white"
                        app:fab_showShadow="false"
                        fab:fab_colorNormal="@color/nliveo_purple_colorPrimary"
                        fab:fab_colorRipple="@color/nliveo_purple_colorPrimaryDark"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/material_grey_800"
                        android:text="关闭"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <com.github.clans.fab.FloatingActionButton
                        android:id="@+id/fab_question_invite"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_invite_white"
                        app:fab_showShadow="false"
                        fab:fab_colorNormal="@color/nliveo_orange_colorPrimary"
                        fab:fab_colorRipple="@color/nliveo_orange_colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/textView_invite"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/material_grey_800"
                        android:text="邀请"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>